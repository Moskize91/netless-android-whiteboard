<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">47dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:borderlessButtonStyle">@color/colorPrimaryDark</item>
        <item name="android:layout_height">47dp</item>
    </style>

    <style name="RoundButton">
        <item name="android:background">@drawable/ic_round_button</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="PrimaryRoundButton">
        <item name="android:background">@drawable/ic_primary_round_button</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
